{"ast":null,"code":"import { ElDropdown } from \"element-plus\";\nimport { ArrowDown } from \"@element-plus/icons-vue\";\nexport default {\n  components: {\n    ElDropdown,\n    ArrowDown\n  },\n  props: {\n    labelContent: null,\n    iconDropdown: null,\n    isRequire: Boolean,\n    isNotAllowNull: Boolean,\n    propText: null,\n    modelValue: null,\n    api: null,\n    isCheckValidate: {\n      type: Boolean,\n      default: false\n    }\n  },\n  watch: {\n    value: function (newValue) {\n      this.$emit(\"update:modelValue\", newValue);\n    },\n    isCheckValidate: function (newValue) {\n      if (newValue && this.isNotAllowNull) {\n        this.validate(this.value);\n      }\n    }\n  },\n  created() {\n    this.value = this.modelValue;\n    fetch(this.api).then(res => res.json()).then(data => {\n      this.listData = data;\n      this.origilData = data;\n      this.itermsFilter = data;\n    });\n  },\n  data() {\n    return {\n      isshow: false,\n      nowindex: 0,\n      value: null,\n      isNull: false,\n      alertMsg: null,\n      itermsFilter: [],\n      origilData: [],\n      listData: [],\n      indexSelected: 0\n    };\n  },\n  methods: {\n    /**\r\n     * Author: PXTRUONG(5/6/2023)\r\n     * đóng mở danh list dropdown\r\n     */\n    showClick() {\n      if (this.isshow == false) {\n        this.isshow = true;\n      } else {\n        this.isshow = false;\n      }\n    },\n    /**\r\n     * Author:PXTURONG(5/6/2023)\r\n     * Autocomplite \r\n     */\n    filterIterms(data) {\n      try {\n        this.itermsFilter = this.origilData.filter(item => item[this.propText].includes(data));\n        this.isshow = true;\n      } catch (error) {\n        console.log(error);\n      }\n    },\n    /**\r\n     * Author:PXTRUONG(5/6/2023)\r\n     * Đóng form\r\n     */\n    clostab() {\n      this.isshow = false;\n    },\n    /**\r\n     * Author:PXTRUONG(5/5/2023)\r\n     * thực hiện phím tắt để chọn item \r\n     */\n    kewdown(event) {\n      try {\n        const maxLength = this.filterIterms.length;\n        if (maxLength == 0) {\n          return;\n        } else {\n          if (event.keyCode == 40) {\n            this.isshow = true;\n            if (this.indexSelected <= maxLength + 1) {\n              this.indexSelected++;\n            } else {\n              this.indexSelected = 0;\n            }\n          } else if (event.keyCode == 38) {\n            if (this.indexSelected > 0) {\n              this.indexSelected--;\n            } else {\n              this.indexSelected = maxLength + 2;\n            }\n          } else if (event.keyCode == 13) {\n            this.value = this.itermsFilter[this.indexSelected][this.propText];\n            this.itermsFilter = this.origilData;\n            this.$emit(\"sendData\", this.api, this.value, this.propText);\n            this.clostab();\n          }\n        }\n      } catch (error) {\n        console.log(error);\n      }\n    },\n    /**\r\n     * Author:PXTRUONG(5/6/2023)\r\n     * nhận giá trị khi click vào item mk chọn \r\n     */\n    async onSelectItem(item) {\n      try {\n        this.value = item[this.propText];\n        this.validate(this.value);\n        this.$emit(\"sendData\", this.api, this.value, this.propText);\n      } catch (error) {\n        console.log(error);\n      }\n    },\n    /**\r\n     * Author:PXTRUONG(5/6/2023)\r\n     * validate dữ liệu \r\n     */\n    validate(data) {\n      try {\n        if (this.isNotAllowNull) {\n          if (data == null || data == undefined || data == \"\") {\n            this.isNull = true;\n            this.alertMsg = this.labelContent + \" không được bỏ trống\";\n            // console.log( this.$refs.Minput);\n            this.clostab();\n            return true;\n          } else {\n            this.isNull = false;\n            this.clostab();\n            return false;\n          }\n        }\n      } catch (error) {\n        console.log(error);\n      }\n    }\n  }\n};","map":{"version":3,"names":["El